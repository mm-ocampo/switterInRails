- @comments.each do |comment|
  %h3= comment.username
  = comment.to_user
  = comment.swit
  %h6
    Sweet:
    = comment.sweet_count
    Sour: 
    = comment.sour_count
    = link_to 'Show', comment
    = link_to 'Comment', new_comment_path(comment.username)
    = link_to 'Edit', edit_comment_path(comment)
    = link_to 'Delete', comment, :method => :delete, :data => { :confirm => 'Are you sure?' }
%br
