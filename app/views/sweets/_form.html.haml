= form_for @sweet do |f|
  - if @sweet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sweet.errors.count, "error")} prohibited this sweet from being saved:"
      %ul
        - @sweet.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :swit_id
    = f.number_field :swit_id
  .field
    = f.label :username
    = f.text_field :username
  .actions
    = f.submit 'Save'
