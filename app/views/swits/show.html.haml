.large-7.columns
	#switbox
		%h3=@swit.swit
		%h6
			Posted by
			= @swit.username
			on
			= @swit.created_at
		Sweet:
		= @swit.sweet_count
		Sour: 
		= @swit.sour_count

		%dl.sub-nav
			%dd.active 
				= link_to 'Sweet', sweetswit_swits_path(id: swit.id)
			%dd
				= link_to 'Sour', sourswit_swits_path(id: swit.id)
			%dd
				= link_to 'Comment', new_comment_path(@swit.username)
			%dd
				= link_to 'Edit', edit_swit_path(@swit)
			%dd
				= link_to 'Delete', @swit, :method => :delete, :data => { :confirm => 'Are you sure?' }

	#commentBox
	%h5
		Comments
	%hr
	-@comments.each do |comment|
		%h6
			= comment.username
		%p 
			= comment.comment
		Posted on 
		= comment.created_at
		%br
		%hr
