= form_for @sour do |f|
  - if @sour.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sour.errors.count, "error")} prohibited this sour from being saved:"
      %ul
        - @sour.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :swit_id
    = f.number_field :swit_id
  .field
    = f.label :username
    = f.text_field :username
  .actions
    = f.submit 'Save'
